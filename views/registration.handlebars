<!--Main Container-->
<section id="registration-container">
    <div class="container">
        <div class="title">Create a New Account</div>
        <form action="/registration" method="POST">
            <div class="user-details">
                <div class="input-box">
                    <input type="text" name="fname" placeholder="First name" value="{{msg.fMsg}}"/>
                    <div class="reg-errors">{{errFname}}</div>
                </div>

                <div class="input-box">
                    <input type="text" name="lname" placeholder="Last name"value="{{msg.lMsg}}" />
                    <div class="reg-errors">{{errLname}}</div>
                </div>

                <div class="input-box wide">
                    <input type="email" name="email" placeholder="Email" value="{{msg.eMsg}}" />
                    <div class="reg-errors">{{errEmail}}</div>
                </div>

                <div class="input-box wide">
                    <input type="text" name="password" placeholder="Password" value="{{msg.pMsg}}"/>
                    <div class="reg-errors">{{errPassword}}</div>
                </div>

            </div>
            <div class="button">
                <input type="submit" value="Sign Up">
            </div>
        </form>
    </div>
</section>