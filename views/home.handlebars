 <div id="home-container">
    <!-- Home - Slider 1-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" >
        <div class="carousel-item active">
        <img class="d-block w-100" src="/images/carousel-1.png" alt="First slide" ">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="/images/carousel-2.png" alt="Second slide" ">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="/images/carousel-3.png" alt="Third slide" ">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" >
        <span class="carousel-control-prev-icon" aria-hidden="true" ></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>

    <!-- Home - Slider2-->
    <section id="home">
        <!--showcase-->
    <!--heading-->
                <h1 class="showcase-heading">Trending</h1>
                <ul id="autoWidth" class="cs-hidden">
                    <!--box-->
                    {{#each films}}
                    <li class="{{this.class}}">
                        <div class="showcase-box">
                            <img src="{{this.image}}" alt="">
                        </div>
                    </li>
                    {{/each}}
                </ul>
    </section>
        
    <!-- Home - SLider 3-->
    <!-- Featured Movies -->
    <section id="movies">
        <h2 class="movies-heading">Featured Movies</h2>
        <!--Slider-->
        <ul id="autoWidth2" class="cs-hidden">
                    <!--slider box-->
                    {{#each films2}}
                    <!--each item-N -->
                    <li class="{{this.class}}">
                        <!--image-->
                    <div class="movies-box">
                            <div class="movies-b-img">
                                <!-- each item's Image -->
                                <div class="quality">{{this.quality}}</div>
                                <img src="{{this.image}}" alt="">
                            </div>
                        <!--text-->
                        <div class="movies-b-text">
                            <strong>{{this.name}}</strong>
                        <!-- <p>{{this.type}}</p> -->
                        </div>
                    </div>    
                    </li>
                    {{/each}}
        </ul>
    </section>


    <!-- Home - SLider 4-->
    <!-- Featured TV Shows-->
    <section id="shows">
        <h2 class="shows-heading">Featured TV Shows</h2>
        <!--Slider-->
        <ul id="autoWidth3" class="cs-hidden">
                    <!--slider box-->
                    {{#each films3}}
                    <!--each item-N -->
                    <li class="{{this.class}}">
                        <!--image-->
                    <div class="shows-box">
                            <div class="shows-b-img">
                                <!-- each item's Image -->
                                <div class="quality">{{this.quality}}</div>
                                <img src="{{this.image}}" alt="">
                            </div>
                        <!--text-->
                        <div class="shows-b-text">
                            <strong>{{this.name}}</strong>
                        <!-- <p>{{this.type}}</p> -->
                        </div>
                    </div>    
                    </li>
                    {{/each}}
        </ul>
    </section>

    <!-- Content Section -->
    <section id="content--container">
            <ul>
                <li>
                    <div class="content--img">
                        <img src="/images/Month.png" alt="">
                    </div>
                </li>
                <li>
                    <div class="content--images">
                        <img src="/images/c-1.jpg" alt="">
                    </div>
                </li>
                <li>
                    <div class="content--images">
                        <img src="/images/c-2.jpg" alt="">
                    </div>
                </li>
                <li>
                    <div class="content--images">
                        <img src="/images/c-3.jpg" alt="">
                    </div>
                </li>
                <li>
                    <div class="content--images">
                        <img src="/images/c-4.jpg" alt="">
                    </div>
                </li>
                <li>
                    <div class="content--images">
                        <img src="/images/c-5.jpg" alt="">
                    </div>
                </li>
            </ul>
    </section>

</div>